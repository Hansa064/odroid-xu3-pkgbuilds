# ODROID Mali GL Driver
# Maintainer: gripped - forum.odroid.com

buildarch=4

pkgname=odroid-libgl-mali-T628-x11
pkgver=r4p0.02rel0
_pkgver=r4p0-02rel0
pkgrel=6
arch=('armv7h')
pkgdesc="ODROID Mali GL Driver"
url="http://malideveloper.arm.com/"
license=('Proprietary')
provides=('libegl' 'libgles' 'libMali' 'odroid-libgl')
conflicts=('odroid-libgl' 'odroid-libgl-mali-T628-fbdev')
depends=('mesa-noegl' 'mesa-libgl-noegl')
source=("http://malideveloper.arm.com/downloads/drivers/binary/${_pkgver}/mali-t62x_${_pkgver}_linux_1+x11.tar.gz"
	'pkgconfigs.tar.xz'
	'50-mali.rules')
md5sums=('27c00dd067d8d8a185a17c657aab16f0'
	 '5788aedbfc54581e032cc881cbccb66b'
	 '058d139371185145bcc7dfd5b33413d6')


package() {
    install -d -m 0755 ${pkgdir}/usr/lib

    cd ${srcdir}/x11
    install -m 0755 libEGL.so ${pkgdir}/usr/lib
    install -m 0755 libGLESv1_CM.so ${pkgdir}/usr/lib
    install -m 0755 libGLESv2.so ${pkgdir}/usr/lib
    install -m 0755 libOpenCL.so ${pkgdir}/usr/lib
    install -m 0755 libmali.so ${pkgdir}/usr/lib
    
    cd ${srcdir}
    mkdir -p ${pkgdir}/usr/lib
    cp -av pkgconfig ${pkgdir}/usr/lib/pkgconfig
    chmod 644 ${pkgdir}/usr/lib/pkgconfig/*

    install -d -m 0755 ${pkgdir}/usr/lib/udev/rules.d
    install -m 0644 50-mali.rules ${pkgdir}/usr/lib/udev/rules.d/50-mali.rules

    cd ${pkgdir}/usr/lib
    ln -s libEGL.so libEGL.so.1
    ln -s libEGL.so.1 libEGL.so.1.4 
    ln -s libGLESv1_CM.so libGLESv1_CM.so.1
    ln -s libGLESv1_CM.so libGLESv1_CM.so.1.1
    ln -s libGLESv2.so libGLESv2.so.2
    ln -s libGLESv2.so libGLESv2.so.2.0
    ln -s libOpenCL.so libOpenCL.so.1
    ln -s libOpenCL.so libOpenCL.so.1.0

    
}
